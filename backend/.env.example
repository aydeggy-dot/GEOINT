# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/nigeria_security
POSTGIS_VERSION=3.3

# Application Settings
APP_NAME=Nigeria Security Early Warning System
API_VERSION=v1
DEBUG=True
SECRET_KEY=change-this-to-a-secure-random-string-in-production

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Geospatial Settings
DEFAULT_SRID=4326
DISTANCE_THRESHOLD_KM=50.0
RISK_GRID_RESOLUTION_KM=10.0

# Alert Zones (kilometers)
IMMEDIATE_ZONE_KM=5.0
WARNING_ZONE_KM=20.0
WATCH_ZONE_KM=50.0

# Verification Thresholds (0.0 to 1.0)
AUTO_VERIFY_THRESHOLD=0.8
MANUAL_REVIEW_THRESHOLD=0.5

# Redis
REDIS_URL=redis://localhost:6379/0

# API Keys (Optional - get from respective services)
MAPBOX_ACCESS_TOKEN=
AFRICASTALKING_USERNAME=
AFRICASTALKING_API_KEY=
